<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.morgan.appdecoches.MainActivity"
    android:gravity="top|center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/mustang"
                    android:id="@+id/imageButtonMustang"
                    android:onClick="btnMustang" />


                <android.support.v4.widget.Space
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    />


                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/tesla"
                    android:onClick="btnTesla"
                    android:id="@+id/imageButtonTesla" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/dodge"
                    android:id="@+id/imageButtonDodge"
                    android:onClick="btnDodge" />


                <android.support.v4.widget.Space
                    android:layout_width="0px"
                    android:layout_height="0dp"
                    />


                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/lexus"
                    android:id="@+id/imageButtonLexus"
                    android:onClick="btnLexus" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/morgan"
                    android:id="@+id/imageButtonMorgan"
                    android:onClick="btnMorgan" />


                <android.support.v4.widget.Space
                    android:layout_width="0px"
                    android:layout_height="0dp"
                    />


                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/cadillac"
                    android:id="@+id/imageButtonCadillac"
                    android:onClick="btnCadillac" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/smart"
                    android:id="@+id/imageButtonSmart"
                    android:onClick="btnSmart" />


                <android.support.v4.widget.Space
                    android:layout_width="0px"
                    android:layout_height="0dp"
                    />


                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/chevrolet"
                    android:id="@+id/imageButtonChevrolet"
                    android:onClick="btnChevrolet" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/dodge_viper"
                    android:id="@+id/imageButtonDodgeViper"
                    android:onClick="btnDodgeViper" />


                <android.support.v4.widget.Space
                    android:layout_width="0px"
                    android:layout_height="0dp"
                    />


                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/bugatti"
                    android:id="@+id/imageButtonBugatti"
                    android:onClick="btnBugatti" />

            </TableRow>

        </TableLayout>
    </LinearLayout>

</RelativeLayout>
