<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.morgan.appdecoches.MainActivity2">

    <TextView
        android:text="Información general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Marca:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMarca"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/editTextMarca"
        android:layout_alignBottom="@+id/editTextMarca"
        android:layout_alignLeft="@+id/textViewFundador"
        android:layout_alignStart="@+id/textViewFundador" />

    <TextView
        android:text="Fundador:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFundador"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/editTextFundador"
        android:layout_alignBottom="@+id/editTextFundador"
        android:layout_alignRight="@+id/textViewWeb"
        android:layout_alignEnd="@+id/textViewWeb" />

    <TextView
        android:text="Fundación: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFundacion"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/editTextFundacion"
        android:layout_alignBottom="@+id/editTextFundacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Modelo: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewModelo"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/editTextFundacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editTextModelo"
        android:layout_alignBaseline="@+id/textViewModelo"
        android:layout_alignBottom="@+id/textViewModelo"
        android:layout_alignLeft="@+id/editTextFundacion"
        android:layout_alignStart="@+id/editTextFundacion"
        android:selectAllOnFocus="false"
        android:focusable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bugatti_chiron"
        android:id="@+id/imageViewCoche"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/editTextModelo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWeb"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:text="Sitio web: "
        android:paddingTop="10dp"
        android:layout_below="@+id/imageViewCoche"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLink"
        android:textColor="@android:color/holo_blue_light"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textViewWeb"
        android:layout_alignBottom="@+id/textViewWeb"
        android:layout_alignLeft="@+id/editTextModelo"
        android:layout_alignStart="@+id/editTextModelo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editTextMarca"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textViewFundacion"
        android:layout_toEndOf="@+id/textViewFundacion"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:focusable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editTextFundacion"
        android:layout_below="@+id/editTextFundador"
        android:layout_alignLeft="@+id/editTextMarca"
        android:layout_alignStart="@+id/editTextMarca"
        android:focusable="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editTextFundador"
        android:layout_below="@+id/editTextMarca"
        android:layout_alignLeft="@+id/editTextMarca"
        android:layout_alignStart="@+id/editTextMarca"
        android:focusable="false" />

    <Button
        android:text="Comprobar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:id="@+id/buttonComprobar"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textViewFundador"
        android:layout_alignStart="@+id/textViewFundador"
        android:visibility="invisible"
        android:onClick="buttonComprobar" />

    <Button
        android:text="Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSiguiente"
        android:layout_alignBaseline="@+id/buttonComprobar"
        android:layout_alignBottom="@+id/buttonComprobar"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:onClick="buttonSiguiente" />

    <Button
        android:text="Salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSalir"
        android:layout_alignBaseline="@+id/buttonSiguiente"
        android:layout_alignBottom="@+id/buttonSiguiente"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:visibility="invisible"
        android:onClick="buttonSalir" />

</RelativeLayout>
